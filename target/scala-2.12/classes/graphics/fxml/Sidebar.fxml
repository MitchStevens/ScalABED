<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import javafx.scene.layout.HBox?>

<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="graphics.Sidebar"
         prefWidth="300.0"
         tabClosingPolicy="UNAVAILABLE">
    <Tab text="Info">
        <Label styleClass="level_name" text="TITLE" />
        <TextArea fx:id="description" wrapText="true" />
        <TitledPane fx:id="hint" text="Hint"/>
    </Tab>
    <Tab text="Game">
        <Label styleClass="level_name" />
        <HBox>
            <Label text="Game Size:"/>
            <fx:include source="Incrementer.fxml" />
        </HBox>
    </Tab>
</TabPane>
